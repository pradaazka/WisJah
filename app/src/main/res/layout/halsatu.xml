<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/light_brown">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/blue_background"/>

    <!-- Teks Judul -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih destinasi wisata sejarah"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- Pilihan dengan Radio Button -->
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <RadioButton
            android:id="@+id/radio_mataram_islam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mataram Islam"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_mataram_hindu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mataram Hindu/Budha"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_masa_kolonial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masa Kolonial"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Indicator Dots -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="4dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="4dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Tombol Mulai -->
    <Button
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="START"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="24dp" />
</LinearLayout>
